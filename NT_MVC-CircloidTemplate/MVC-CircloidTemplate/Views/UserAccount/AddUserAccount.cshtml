
@{
    ViewBag.Title = "Kullanıcı Ekleme";
}
@section head{
    <style>
        #hata{    /*hata mesajı verdiğimizde rengini vs değiştirdik*/
            color:red;
            font-size:16px;
        }
    </style>
    }
<div class="row">
    <div class="col-md-12 col-sm-12">
        <div class="block">
            <div class="block-heading">
                <div class="main-text h2">
                    Kullanıcı Ekleme Sayfası
                </div>
                <div class="block-controls">
                    <a href="/UserAccount/Index">
                        <span aria-hidden="true" class="icon icon-cross icon-size-medium block-control-remove"></span>
                    </a>
                    <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
                </div>
            </div>
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <form action="/UserAccount/AddUserAccount" method="post" role="form" enctype="multipart/form-data"> @*encytype resim için*@
                    @*Form, Post için gerekli. Actionda yol tanımladık*@

                    <div class="form-group">
                        <label for="exampleInputEmail1">Kullanıcı Adı:</label>
                        <input type="text" class="form-control" id="exampleInputEmail1" placeholder="Kullanıcı adı giriniz" name="UserName">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Parola:</label>
                        <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Parola yazınız" name="Password">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Email:</label>
                        <input type="email" class="form-control" id="exampleInputPassword1" placeholder="Email adresini yazınız" name="Email">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1"> Gizli Soru:</label>
                        <input type="text" class="form-control" id="exampleInputEmail1" placeholder="Gizli Soru giriniz" name="PasswordQuestion">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Gizli Cevap:</label>
                        <input type="text" class="form-control" id="exampleInputEmail1" placeholder="Gizli Cevap giriniz" name="PasswordAnswer">
                    </div>
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                          </form>
                    <span id="hata">@ViewBag.messageStatus</span>  @* Hata mesajını göstermek için biz ekledik*@ 
                </div>
            </div>
        </div>
    </div>
</div>

