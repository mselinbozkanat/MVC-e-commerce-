
@{
    ViewBag.Title = "Role Ekle";
}

<div class="row">
    <div class="col-md-12 col-sm-12">
        <div class="block">
            <div class="block-heading">
                <div class="main-text h2">
                    Role Ekleme Sayfası
                </div>
                <div class="block-controls">
                    <a href="/RoleAccount/Index">
                        <span aria-hidden="true" class="icon icon-cross icon-size-medium block-control-remove"></span>
                    </a>
                    <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
                </div>
            </div>
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <form action="/RoleAccount/AddRoleAccount" method="post" role="form" enctype="multipart/form-data">
                        @*Form, Post için gerekli. Actionda yol tanımladık*@
                        <div class="form-group">
                            @{ 
                                string message = ViewBag.Message;
                                if (message != null)
                                {
                                    if (message=="Başarılı")
                                    {
                                        <label class="text-success">@message</label>
                                    }
                                    else
                                    {
                                        <label class="text-danger">@message</label>
                                    }
                                }
                            }
                        </div>

                        <div class="form-group">
                            <label for="exampleInputEmail1">Rol Adı:</label>
                            <input type="text" class="form-control" id="exampleInputEmail1" placeholder="Rol adı giriniz" name="RoleName">
                        </div>
                        
                       
                        <button type="submit" class="btn btn-primary">Kaydet</button>
                        <!--Submit içinde bulunduğu formun actionında hangi adres ve method tipi belirtilmişse eğer method post ise formun içindeki verileri post eder.-->
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

