
@{
    ViewBag.Title = "Ürün Ekle";
}
@using MVC_CircloidTemplate.Models;
<div class="row">
    <div class="col-md-12 col-sm-12">
        <div class="block">
            <div class="block-heading">
                <div class="main-text h2">
                    Ürün Ekleme Sayfası
                </div>
                <div class="block-controls">
                    <a href="/Product/Index">
                        <span aria-hidden="true" class="icon icon-cross icon-size-medium block-control-remove"></span>
                    </a>
                        <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
                </div>
            </div>
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <form action="/Product/AddProduct" method="post" role="form">    @*   Form, Post için gerekli. Action tanımladık*@
                        <div class="form-group">
                            <label for="exampleInputEmail1">Ürün Adı:</label>
                            <input type="text" class="form-control" id="exampleInputEmail1" placeholder="Ürün adı giriniz" name="ProductName">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Fiyat:</label>
                            <input type="number" class="form-control" id="exampleInputPassword1" placeholder="Fiyat giriniz" name="UnitPrice">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Stok:</label>
                            <input type="number" class="form-control" id="exampleInputPassword1" placeholder="Stok giriniz" name="UnitsInStock">
                        </div>
                        <div class="form-group">
                            <label for="input-demo-v">Kategori:</label>
                            <select id="input-demo-v" class="form-control" name="CategoryID">
                                @foreach (Category cat in ViewBag.ctgList)
                                {
                                    <option value="@cat.CategoryID">@cat.CategoryName</option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="input-demo-v">Tedarikçi:</label>
                            <select id="input-demo-v" class="form-control" name="SupplierID">
                                @foreach (Supplier sup in ViewBag.supList)
                                {
                                   <option value="@sup.SupplierID">@sup.CompanyName</option>
                                }
                            </select>
                            </div>
                        <button type="submit" class="btn btn-primary">Kaydet</button>
                        <!--Submit içinde bulunduğu formun actionında hangi adres ve method tipi belirtilmişse eğer method post ise formun içindeki verileri post eder.-->
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


