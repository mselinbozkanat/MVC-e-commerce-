
@{
    ViewBag.Title = "Ürün Sil";
}

@using MVC_CircloidTemplate.Models;
@model Category
<div class="row">
    <div class="col-md-12">
        <div class="block">
            <div class="block-heading">
                <div class="main-text h2">
                    Kategori Silme Sayfası
                </div>
                <div class="block-controls">
                    <a href="/Category/Index">
                        <span aria-hidden="true" class="icon icon-cross icon-size-medium block-control-remove"></span>
                    </a>
                </div>
            </div>
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <form action="/Category/DeleteCategory" method="post" role="form">
                        @* FORM, Post için gerekli. Action tanımladık*@
                        <input type="Hidden" name="CategoryID" value="@Model.CategoryID" />   @* BURASI ÖNEMLİ....silme için gerekli.Controllera gelen silme isteğini
                                                                                                  Modelda CategoryID ile yakaladık. hidden görünmez*@
                        <label>@Model.CategoryName kategorisi silinsin mi?</label>
                        <input type="submit" class="btn btn-danger" value="Evet" />
                        <!--Submit içinde bulunduğu formun actionında hangi adres ve method tipi belirtilmişse eğer method post ise formun içindeki verileri post eder.-->
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

