
@{
	ViewBag.Title = "Cookie Ata";
}

<div class="row">
	<div class="col-md-12 col-sm-12">
		<div class="block">
			<div class="block-heading">
				<div class="main-text h2">
					Cookie'ye Değer Atama Sayfası
				</div>
				<div class="block-controls">
				
					
					<span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
				</div>
			</div>
			<div class="block-content-outer">
				<div class="block-content-inner">
					<form action="/Home/CookieAta" method="post" role="form" enctype="multipart/form-data">
						@*Form, Post için gerekli. Actionda yol tanımladık*@

						<div class="form-group">
							<label for="exampleInputEmail1">Cookie Adı:</label>
							<input type="text" class="form-control" id="exampleInputEmail1" placeholder="Cookie Adı giriniz" name="CookieName">
						</div>
						<div class="form-group">
							<label for="exampleInputPassword1">Cookie Değeri:</label>
							<input type="text" class="form-control" id="exampleInputPassword1" placeholder="Cookie Değeri yazınız" name="CookieValue">
						</div>
						
						<button type="submit" class="btn btn-primary">Kaydet</button>
						<!--Submit içinde bulunduğu formun actionında hangi adres ve method tipi belirtilmişse eğer method post ise formun içindeki verileri post eder.-->
					</form>
				</div>
			</div>
		</div>
	</div>
</div>


